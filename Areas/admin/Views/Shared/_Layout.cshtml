<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Area</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container-fluid">
            @Html.ActionLink("Dashboard", "Index", "Dashboard", "", new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink("Pages", "Index", "Pages", "", new { @class = "nav-link" })    <!--замена ссылки-->
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Sidebar", "EditSidebar", "Pages", "", new { @class = "nav-link" })     <!--замена ссылки-->
                    </li>
                    <li class="nav-item">
                        @*<a class="nav-link" href="#">Pricing</a>*@
                    </li>
                </ul>

                <!--New right menu-->
                <ul class="navbar-nav ml-auto">
                    <li>
                        <a href="/" class="navbar-brand" target="_blank">Shopping Cart</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My MVC Store</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")

    <!--Поключаем "бандл" к сайту" -->
    @Scripts.Render("~/bundles/jqueryui")

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
